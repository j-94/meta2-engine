#!/usr/bin/env bash
set -euo pipefail

USER="${1:-demo}"
KEY="${2:-demo-key-123}"
THREAD="${3:-omni-1}"
API="http://127.0.0.1:8080/users/$USER/run"
PROMPT_FILE="prompts/META_OMNI.md"
STATE_DIR=".chat_state"
mkdir -p "$STATE_DIR"
HIST="$STATE_DIR/$THREAD.json"

# Initialize history if not exists
[[ -f "$HIST" ]] || echo "[]" > "$HIST"

echo "ðŸ§  MetaÂ² Chat - User: $USER, Thread: $THREAD"
echo "ðŸ“ Prompt: $PROMPT_FILE"
echo "ðŸ’¾ History: $HIST"
echo "Type 'exit' to quit, 'clear' to reset history"
echo

while true; do
  printf "\nYou> "
  IFS= read -r MSG || exit 0
  
  case "$MSG" in
    "exit"|"quit") echo "ðŸ‘‹ Goodbye!"; exit 0 ;;
    "clear") echo "[]" > "$HIST"; echo "ðŸ—‘ï¸  History cleared"; continue ;;
    "") continue ;;
  esac
  
  # Read system prompt and history
  SYS="$(cat "$PROMPT_FILE")"
  HISTORY="$(cat "$HIST")"
  
  # Build request
  REQ="$(jq -n \
    --arg thread "$THREAD" \
    --arg sys "$SYS" \
    --arg msg "$MSG" \
    --argjson hist "$HISTORY" \
    '{
      goal_id: "meta.omni",
      inputs: {
        thread: $thread,
        system: $sys,
        message: $msg,
        history: $hist,
        lm_model: "gpt-4"
      },
      policy: null
    }')"
  
  # Call API
  echo "ðŸ¤– Thinking..."
  RES="$(curl -s -X POST \
    -H "x-api-key: $KEY" \
    -H "content-type: application/json" \
    -d "$REQ" \
    "$API")"
  
  # Check for errors
  if echo "$RES" | jq -e '.error' >/dev/null 2>&1; then
    echo "âŒ Error: $(echo "$RES" | jq -r '.error // "Unknown error"')"
    continue
  fi
  
  # Extract and display agent response
  echo
  echo "ðŸŽ¯ Intent: $(echo "$RES" | jq -r '.manifest.evidence.stdout // "No response"')"
  echo "ðŸ“Š Bits: $(echo "$RES" | jq -r '.bits | to_entries | map("\(.key)=\(.value)") | join(" ")')"
  echo "ðŸ”„ PR: $(echo "$RES" | jq -r '.pr_created // "none"')"
  echo "ðŸ§  MetaÂ²: $(echo "$RES" | jq -r '.meta2_proposal // "none"')"
  
  # Show quota
  QUOTA="$(echo "$RES" | jq -r '.quota_remaining // "unknown"')"
  echo "ðŸ’° Quota: $QUOTA"
  
  # Update history
  NEW_HIST="$(echo "$HISTORY" | jq \
    --arg msg "$MSG" \
    --argjson res "$RES" \
    '. + [
      {"role": "user", "content": $msg},
      {"role": "assistant", "content": $res}
    ]')"
  echo "$NEW_HIST" > "$HIST"
done
