    "ttl": { "type": "integer", "minimum": 0 },
    "tags": { "type": "array", "items": { "type": "string" } },
    "bits": {
      "type": "object",
      "properties": {"A": {"type":"number"}, "U": {"type":"number"}, "P": {"type":"number"}, "E": {"type":"number"}, "Î”": {"type":"number"}, "I": {"type":"number"}, "R": {"type":"number"}, "T": {"type":"number"}, "M": {"type":"number"}}
    },
